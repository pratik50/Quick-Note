<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F3EEEA"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CreateNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingTop="9dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg"
            android:hint="Title"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColorHint="#C7C5C4"/>

        <EditText
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg"
            android:hint="Sub-title"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:textColorHint="#C7C5C4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pRed"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/red_dot"
                />

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:background="@drawable/green_dot"
                />

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:background="@drawable/blue_dot"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/edt_bg"
            android:hint="Notes..."
            android:padding="10dp"
            android:gravity="start"
            android:paddingStart="15dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#C7C5C4"/>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="26dp"
        android:backgroundTint="#EAC696	"
        android:src="@drawable/done_icon"
        android:contentDescription="Notes saving button" />
</FrameLayout>